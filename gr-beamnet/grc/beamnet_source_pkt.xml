<?xml version="1.0"?>
<block>
  <name>Source Packet</name>
  <key>beamnet_source_pkt</key>
  <category>[beamnet]</category>
  <import>import beamnet</import>
  <make>beamnet.source_pkt($tx, $index, $fft_size, $hd_len, $pd_len, $sync_word, $baseline)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>TX</name>
    <key>tx</key>
    <type>int</type>
  </param>
  <param>
    <name>Index</name>
    <key>index</key>
    <type>int</type>
  </param>
  <param>
    <name>FFT Size</name>
    <key>fft_size</key>
    <type>int</type>
  </param>
  <param>
    <name>Header Length</name>
    <key>hd_len</key>
    <type>int</type>
  </param>
  <param>
    <name>Payload Length</name>
    <key>pd_len</key>
    <type>int</type>
  </param>
  <param>
	<name>Sync Word</name>
	<key>sync_word</key>
    <value>()</value>
    <type>raw</type>
  </param>
  <param>
    <name>Baseline</name>
    <key>baseline</key>
    <type>int</type>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>phase</name>
    <type>message</type>
    <optional>1</optional>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>complex</type>
    <vlen>$fft_size</vlen>
  </source>
</block>
