<?xml version="1.0"?>
<block>
  <name>correlation detector</name>
  <key>beamnet_correlation_detector</key>
  <category>[beamnet]</category>
  <import>import beamnet</import>
  <make>beamnet.correlation_detector($len, $threshold, $deviation)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>Length</name>
    <key>len</key>
    <type>int</type>
  </param>
  <param>
    <name>Threshold</name>
    <key>threshold</key>
    <type>float</type>
  </param>
  <param>
    <name>Deviation</name>
    <key>deviation</key>
    <type>float</type>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>complex</type>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>float</type>
  </source>
  <source>
    <name>target</name>
    <type>message</type>
  </source>
</block>
