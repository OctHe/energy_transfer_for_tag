<?xml version="1.0"?>
<block>
  <name>Signal Generator</name>
  <key>beamnet_signal_generator</key>
  <category>[beamnet]</category>
  <import>import beamnet</import>
  <make>beamnet.signal_generator($samp_rate, $fft_size, $tx_index)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param> 
    <name>Sample rate</name>
    <key>samp_rate</key>
    <type>float</type>
  </param>
  <param>
    <name>FFT size</name>
    <key>fft_size</key>
    <type>int</type>
  </param>
  <param>
    <name>TX index</name>
    <key>tx_index</key>
    <type>int</type>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in_ce</name>
    <type>complex</type>
    <vlen>$fft_size</vlen>
  </sink>
  <sink>
    <name>in_bf</name>
    <type>complex</type>
    <vlen>$fft_size</vlen>
  </sink>
  <sink>
    <name>time_cal</name>
    <type>message</type>
    <optional>1</optional>
  </sink>
  <sink>
    <name>freq_cal</name>
    <type>message</type>
    <optional>1</optional>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>complex</type>
    <vlen>$fft_size</vlen>
  </source>
</block>
