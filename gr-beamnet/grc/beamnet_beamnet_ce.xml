<?xml version="1.0"?>
<block>
  <name>BeamNet channel estimation</name>
  <key>beamnet_beamnet_ce</key>
  <category>[beamnet]</category>
  <import>import beamnet</import>
  <make>beamnet.beamnet_ce($fft_size, $length, $tx_num, $tx_ch_index)</make>
  <!-- make one 'param' node for every parameter you want settable from the gui.
       sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>FFT size</name>
    <key>fft_size</key>
    <type>int</type>
  </param>
  <param>
    <name>Length</name>
    <key>length</key>
    <type>int</type>
  </param>
  <param>
    <name>tx number</name>
    <key>tx_num</key>
    <type>int</type>
  </param>
  <param>
    <name>Center channel</name>
    <key>tx_ch_index</key>
    <type>int</type>
  </param>

  <!-- make one 'sink' node per input. sub-nodes:
       * name (an identifier for the gui)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>ch_in</name>
    <type>message</type>
  </sink>

  <!-- make one 'source' node per output. sub-nodes:
       * name (an identifier for the gui)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>ch_out</name>
    <type>message</type>
    <optional>1</optional>
  </source>
</block>
