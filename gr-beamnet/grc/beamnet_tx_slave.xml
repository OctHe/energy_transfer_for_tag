<?xml version="1.0"?>
<block>
  <name>TX Slave</name>
  <key>beamnet_tx_slave</key>
  <category>[beamnet]</category>
  <import>import beamnet</import>
  <make>beamnet.tx_slave($tx, $index, $fft_size, $hd_len, $pd_len)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>TX</name>
    <key>tx</key>
    <type>int</type>
  </param>
  <param>
    <name>Index</name>
    <key>index</key>
    <type>int</type>
  </param>
  <param>
    <name>FFT Size</name>
    <key>fft_size</key>
    <type>int</type>
  </param>
  <param>
    <name>Header Length</name>
    <key>hd_len</key>
    <type>int</type>
  </param>
  <param>
    <name>Payload Length</name>
    <key>pd_len</key>
    <type>int</type>
  </param>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>complex</type>
    <vlen>$fft_size</vlen>
  </source>
</block>
