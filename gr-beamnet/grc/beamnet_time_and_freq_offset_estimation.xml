<?xml version="1.0"?>
<block>
  <name>Time and freq offset estimation</name>
  <key>beamnet_time_and_freq_offset_estimation</key>
  <category>[beamnet]</category>
  <import>import beamnet</import>
  <make>beamnet.time_and_freq_offset_estimation($samp_rate, $fft_size, $tx, $update_rate)</make> 
  <!-- make one 'param' node for every parameter you want settable from the GUI.  
      sub-nodes: 
      * name
      * key (makes the value accessible as $keyname, e.g. in the make node)
      * type -->
  <param> 
    <name>Sample rate</name>
    <key>samp_rate</key>
    <type>float</type>
  </param>
  <param>
    <name>FFT size</name>
    <key>fft_size</key>
    <type>int</type>
  </param>
  <param>
    <name>TX number</name>
    <key>tx</key>
    <type>int</type>
  </param>
  <param>
    <name>Update rate</name>
    <key>update_rate</key>
    <type>float</type>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in</name>
    <type>complex</type>
    <vlen>$fft_size</vlen>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>time_sync</name>
    <type>message</type>
    <optional>1</optional>
  </source>
  <source>
    <name>freq_sync</name>
    <type>message</type>
    <optional>1</optional>
  </source>
</block>
