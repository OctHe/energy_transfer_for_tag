<?xml version="1.0"?>
<block>
  <name>Packet Trigger</name>
  <key>beamnet_packet_trigger</key>
  <category>[beamnet]</category>
  <import>import beamnet</import>
  <make>beamnet.packet_trigger($fft_size, $pkt_size, $thr)</make>
  <!-- Make one 'param' node for every Parameter you want settable from the GUI.
       Sub-nodes:
       * name
       * key (makes the value accessible as $keyname, e.g. in the make node)
       * type -->
  <param>
    <name>FFT Size</name>
    <key>fft_size</key>
    <type>int</type>
  </param>
  <param>
    <name>Packet Size</name>
    <key>pkt_size</key>
    <type>int</type>
  </param>
  <param>
    <name>Threshold</name>
    <key>thr</key>
    <type>float</type>
  </param>

  <!-- Make one 'sink' node per input. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <sink>
    <name>in_ed</name>
    <type>float</type>
  </sink>
  <sink>
    <name>in_ss</name>
    <type>float</type>
  </sink>

  <!-- Make one 'source' node per output. Sub-nodes:
       * name (an identifier for the GUI)
       * type
       * vlen
       * optional (set to 1 for optional inputs) -->
  <source>
    <name>out</name>
    <type>byte</type>
  </source>
</block>
